#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(int argc, const char *argv[]){
    if(argc != 2){
        printf("Aufruf: Bubblesort.c Anzahl\n");
        return 1;
    }

    int n = atoi(argv[1]);
    if(n < 1){
        printf("UngÃ¼ltige Eingabe!\n");
        return 1;
    }
    int *a = (int*) malloc((size_t)n * sizeof(int));
    if(!a){return 1;}
    
    printf("Bitte %d ganze Zahlen eingeben: ", n);
    int k = 0;
    for(int i = 0; i < n; ++i){
        if(scanf("%d\n", &a[i]) != 1){
            goto out;
        }
        ++k;
    }
    out:
    srand((unsigned int) time(NULL));
    for(; k < n; ++k){
        a[k] = rand();
        int m = a[k];
        printf("%d\n", m);
    }

    for(int i = n-1; i > 0; --i){
        for(int j = 0; j < i - 1; ++j){
            if (a[j] > a[j + 1]) {
                int tmp = a[j + 1];
                a[j + 1] = a[j];
                a[j] = tmp;
            }
        }
    }
    printf("\nSortierte Zahlenfolge: ");
    for (int i = 0; i < n; i++) {
        int m = a[i];
        printf("%d, ",m);
    }
    printf("\n");
    free(a);
}